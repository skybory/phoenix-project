<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">

   <select id="checkId" parameterType="string" resultType="_int">
      SELECT COUNT(*) FROM tbl_join WHERE userId = #{userId} 
   </select>

   <insert id="join" parameterType="userdto">
      INSERT INTO `tbl_join` VALUES 
      (#{userId},#{userPw},#{userName},#{userAge},#{gender},#{phoneNumber},#{userEmail},#{userAddress})
   </insert>

   <select id="login" parameterType="hashmap" resultType="userdto">
      select * from `tbl_join`
      where userId = #{userId} and userPw = #{userPw}
   </select>
   
   <select id="searchById" parameterType="string" resultType="userdto">
       SELECT * FROM `tbl_join` WHERE userId = #{userId}
    </select>
    
   <select id="getList" resultType="userdto">
       SELECT * FROM `tbl_join`
    </select>
</mapper>
 